{% extends "layout.jinja2" %}

{% block content %}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card mx-auto" style="margin-top: 10%;" >
                <div class="card-body">
                    <h3 class="card-title text-center">Register for Work Hub</h3>
                    
                    {% for message in get_flashed_messages() %}
                        <div class="alert alert-warning">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    
                    <form method="POST" action="/register">
                        {{ form.csrf_token }}

                        <div class="form-group mb-3">
                            {{ form.role.label(class="col-form-label ") }}
                            {% for subrole in form.role %}
                                <div class="form-check form-check-inline" type="radio">
                                    {{ subrole(class="form-check-input") }} {{ subrole.label(class="form-check-label orange") }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="form-group mb-3">
                            {{ form.fname.label(class="form-label") }} {{ form.fname(class="form-control", id="firstName", placeholder="Enter your first name") }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form.lname.label(class="form-label") }} {{ form.lname(class="form-control", id="lastName", placeholder="Enter your last name") }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form.email.label(class="form-label") }} {{ form.email(class="form-control", id="email", placeholder="Enter your Email Address") }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form.contact.label(class="form-label") }} {{ form.contact(class="form-control", id="phone", placeholder="Enter your Phone Number") }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form.password.label(class="form-label") }} {{ form.password(class="form-control", id="password", placeholder="Enter your password") }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form.confirm.label(class="form-label") }} {{ form.confirm(class="form-control", id="conPassword", placeholder="Enter your password again") }}
                        </div>
                        <!-- <div class="form-group mb-3">
                            <label for="profilePhoto">Profile photo</label>
                            <input type="file" class="form-control-file" id="profilePhoto">
                        </div> -->
                        <div class="form-group mb-3">
                        {{ form.submit(class="btn btn-lg btn-block", style="background-color:#F07217; color:#ffffff; border-radius:20px; width:150px") }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}